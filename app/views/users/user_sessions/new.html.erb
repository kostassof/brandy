<div class="page-header"><h1>Sign In</h1></div>

<%= simple_form_for @user_session, url: sign_in_path do |f| %>

  <div class="form-group">
    <%= f.input_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>

  <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
<% end %>
